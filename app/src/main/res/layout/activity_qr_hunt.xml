<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QrHuntActivity">

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/vista_escaner_bv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO Poner las constantes como 10dp y 20sp como recursos de tipo <dimen>
        Eg: <dimen name="margen_widgets_pantalla_escanear" >10dp</dimen>
        El texto en el contador de puntos es un ejemplo (placeholder)
        Podrían quitarlo para insertarlo mediante código conforme al contenido
        de la BD
    -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_avatar_iv"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_tv"
            android:text="Username"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/user_avatar_iv"
            app:layout_constraintStart_toEndOf="@id/user_avatar_iv" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points_ic_iv"
            android:src="@android:drawable/star_on"
            app:layout_constraintTop_toBottomOf="@id/user_name_tv"
            app:layout_constraintStart_toStartOf="@id/user_name_tv" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points_tv"
            android:text="470 pts"
            android:textColor="#EECC01"
            app:layout_constraintStart_toEndOf="@id/points_ic_iv"
            app:layout_constraintTop_toTopOf="@id/points_ic_iv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/hint_description_tv"
        android:text="El verdadero valor de las cosas radica en su Historia. Dirígete a la sección de libros históricos"
        android:textColor="@android:color/darker_gray"
        android:background="@android:color/white"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="12dp"
        android:paddingHorizontal="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint_title_tv"
        android:text="Pista Actual"
        android:background="#0088FF"
        android:textColor="@android:color/white"
        android:padding="8dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toTopOf="@id/hint_description_tv"
        app:layout_constraintStart_toStartOf="@id/hint_description_tv" />

    <View
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hint_title_tv"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>